                    </Viewbox>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Background="DarkGray">
                <Button Width="180" Padding="0" HorizontalAlignment="Center" Margin="0,5,0,0" Background="Transparent" BorderThickness="0" Click="RecordManagement_Click">
                    <GroupBox Header="Record " Padding="20" Background="White" Foreground="DarkRed" FontWeight="Bold" Style="{StaticResource CustomGroupBoxStyle}">
                        <StackPanel>
                            <Image Source="Resources/fauget.png" Width="148" Height="106"/>
                            <Border BorderThickness="0,0,0,3" BorderBrush="Black" Padding="5">
                            </Border>
                        </StackPanel>
                    </GroupBox>
                </Button>
                <Button Width="180" Padding="0" HorizontalAlignment="Center" Margin="0,5,0,0" Background="Transparent" BorderThickness="0" Click="StandardManagement_Click">
                    <GroupBox Header="Standard" Padding="20" Background="White" Foreground="DarkRed" FontWeight="Bold" Style="{StaticResource CustomGroupBoxStyle}">
                        <StackPanel>
                            <Image Source="Resources/fauget.png" Width="148" Height="106"/>
                            <Border BorderThickness="0,0,0,3" BorderBrush="Black" Padding="5">
