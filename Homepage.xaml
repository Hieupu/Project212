                <Border BorderBrush="Black" BorderThickness="2" CornerRadius="1" Padding="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="18*"/>
                            <RowDefinition Height="41*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="37*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.Background>
                            <ImageBrush ImageSource="Resources/fauget.png"
                      Stretch="Uniform" AlignmentX="Right"
                      ViewportUnits="RelativeToBoundingBox"
                      Viewport="0.35,0.25,0.35,0.5"
                      AlignmentY="Top"/>
                        </Grid.Background>
                        <Viewbox Name="ContainerEngineer" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <Grid x:Name="ReceptionistPanel" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="WhiteSmoke"
MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Content="MEIM System" HorizontalAlignment="Left" FontWeight="Bold"
     FontStyle="Italic" Foreground="Black" Margin="10,0,0,0"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,0">
                    <Viewbox Stretch="Uniform">
                        <StackPanel Orientation="Horizontal">
                            <Button Width="25" Height="25" Click="MinimizeButton_Click" Style="{DynamicResource CustomBtnClose}">
                                <fa:ImageAwesome Icon="WindowMinimize" Width="12" Foreground="Black"/>
                            </Button>
                            <Button Width="25" Height="25" Click="CloseButton_Click" Style="{DynamicResource CustomBtnClose}">
                                <fa:ImageAwesome Icon="Close" Width="12" Foreground="Black"/>
                            </Button>
                        </StackPanel>
                    </Viewbox>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Background="DarkGray">
                <Button Width="180" Padding="0" HorizontalAlignment="Center" Margin="0,5,0,0" Background="Transparent" BorderThickness="0" Click="BookingManagement_Click">
                    <GroupBox Header="Booking Management" Padding="20" Background="White" Foreground="DarkRed" FontWeight="Bold" Style="{StaticResource CustomGroupBoxStyle}">
                        <StackPanel>
                            <Image Source="Resources/fauget.png" Width="148" Height="106"/>
                            <Border BorderThickness="0,0,0,3" BorderBrush="Black" Padding="5">
                            </Border>
                        </StackPanel>
                    </GroupBox>
                </Button>
            </StackPanel>

            <Grid Background="LightGray" Grid.Row="2" Grid.ColumnSpan="2" >
                <Grid>
                    <fa:ImageAwesome Icon="file" Height="30" Width="30" Foreground="LightYellow" HorizontalAlignment="Left" Margin="10,5,0,5"/>
                    <Label Content="Version" FontWeight="Bold" Foreground="#0091FF" Margin="40,0,24,15"/>
                    <Label Content="1.0.0" FontWeight="Bold" Foreground="White" Margin="40,14,24,2"/>
                    <Button Content="Log out" Margin="871,8,24,6" Background="Green" Click="ButLogOut_Click"/>
