                                <fa:ImageAwesome Icon="WindowMinimize" Width="12" Foreground="Black"/>
                            </Button>
                            <Button Width="25" Height="25" Click="CloseButton_Click" Style="{DynamicResource CustomBtnClose}">
                                <fa:ImageAwesome Icon="Close" Width="12" Foreground="Black"/>
                            </Button>
                        </StackPanel>
                    </Viewbox>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Background="DarkGray">
                <Button Width="180" Padding="0" HorizontalAlignment="Center" Margin="0,5,0,0" Background="Transparent" BorderThickness="0" Click="AccountManagement_Click">
                    <GroupBox Header="Account Manegement" Padding="20" Background="White" Foreground="DarkRed" FontWeight="Bold" Style="{StaticResource CustomGroupBoxStyle}" Width="170">
                        <StackPanel>
                            <Image Source="Resources/fauget.png" Width="148" Height="106"/>
                            <Border BorderThickness="0,0,0,3" BorderBrush="Black" Padding="5">
                            </Border>
                        </StackPanel>
                    </GroupBox>
                </Button>

                <Button Width="180" Padding="0" HorizontalAlignment="Center" Margin="0,5,0,5" Background="Transparent" BorderThickness="0" Click="BookingHistory_Click">
                    <GroupBox Header="Booking History" Padding="20" Background="White" Style="{StaticResource CustomGroupBoxStyle}">
                        <StackPanel>
                            <Image Source="Resources/fauget.png" Width="148" Height="106"/>
                            <Border BorderThickness="0,0,0,3" BorderBrush="Black" Padding="5">
                            </Border>
                        </StackPanel>
                    </GroupBox>
                </Button>

                <Button Width="180" Padding="0" HorizontalAlignment="Center" Margin="0,0,0,0" Background="Transparent" BorderThickness="0" Click="Setting_Click">
                    <GroupBox Header="System Setting" Padding="20"  Background="White" Style="{StaticResource CustomGroupBoxStyle}">
                        <StackPanel>
                            <Image Source="Resources/fauget.png" Width="148" Height="106"/>
                            <Border BorderThickness="0,0,0,3" BorderBrush="Black" Padding="5">
                            </Border>
                        </StackPanel>
                    </GroupBox>
                </Button>
            </StackPanel>

            <Grid Background="LightGray" Grid.Row="2" Grid.ColumnSpan="2" >
                <Grid>
                    <fa:ImageAwesome Icon="file" Height="30" Width="30" Foreground="LightYellow" HorizontalAlignment="Left" Margin="10,5,0,5"/>
                    <Label Content="Version" FontWeight="Bold" Foreground="#0091FF" Margin="40,0,24,15"/>
                    <Label Content="1.0.0" FontWeight="Bold" Foreground="White" Margin="40,14,24,2"/>
                    <Button Content="Log out" Margin="871,8,24,6" Background="Green" Click="ButLogOut_Click"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="1" Background="WhiteSmoke">
                <Border BorderBrush="Black" BorderThickness="2" CornerRadius="1" Padding="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="18*"/>
                            <RowDefinition Height="41*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="37*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.Background>
                            <ImageBrush ImageSource="Resources/fauget.png"
                            Stretch="Uniform" AlignmentX="Right"
                            ViewportUnits="RelativeToBoundingBox"
                            Viewport="0.35,0.25,0.35,0.5"
                            AlignmentY="Top"/>
                        </Grid.Background>
                        <Viewbox Name="ContainerAdmin" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
