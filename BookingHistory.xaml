<UserControl x:Class="Project212.BookingHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project212"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Lịch Sử Đặt Chỗ" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="From" VerticalAlignment="Center"/>
            <DatePicker x:Name="dpFrom" Width="150"/>
            <TextBlock Text="To" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <DatePicker x:Name="dpTo" Width="150"/>
            <Button Content="Lọc" Width="70" Click="FilterBookings" Margin="10,0,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Text="Đạt: " IsReadOnly="True" BorderThickness="0"/>
            <TextBox x:Name="txtPassedOrders" Width="80"/>

            <TextBox Text="Chưa đạt: " IsReadOnly="True" BorderThickness="0" Margin="10,0,0,0"/>
            <TextBox x:Name="txtNotPassedOrders" Width="80"/>

            <TextBox Text="Chưa duyệt: " IsReadOnly="True" BorderThickness="0" Margin="10,0,0,0"/>
            <TextBox x:Name="txtPendingOrders" Width="80"/>

            <TextBox Text="Đã duyệt: " IsReadOnly="True" BorderThickness="0" Margin="10,0,0,0"/>
            <TextBox x:Name="txtApprovedOrders" Width="80"/>

            <TextBox Text="Đã hủy: " IsReadOnly="True" BorderThickness="0" Margin="10,0,0,0"/>
            <TextBox x:Name="txtCanceledOrders" Width="80"/>
        </StackPanel>

        <DataGrid Grid.Row="3" x:Name="dgBookingHistory" AutoGenerateColumns="False" Margin="10" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding Acc.Citizens[0].Name}"/>
                <DataGridTextColumn Header="Vehicle" Binding="{Binding Vehicle.FullInfo}"/>
                <DataGridTextColumn Header="Station" Binding="{Binding Inspection.Name}"/>
                <DataGridTextColumn Header="Time" Binding="{Binding InspectTime}"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}"/>
                <DataGridTextColumn Header="CO" Binding="{Binding Records[0].Co}" />
                <DataGridTextColumn Header="HC" Binding="{Binding Records[0].Hc}" />
                <DataGridTextColumn Header="NOx" Binding="{Binding Records[0].Nox}" />
                <DataGridTextColumn Header="Result" Binding="{Binding Records[0].ResultText}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Xuất báo cáo" Width="100" Margin="5,5,5,5" Click="Export"/>
        </StackPanel>
    </Grid> 
</UserControl>
