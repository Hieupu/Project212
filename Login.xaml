<Window x:Class="Project212.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project212"
      mc:Ignorable="d" 
      Height="450" Width="800"
      Title="Login"
        WindowStartupLocation="CenterScreen">

    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Login" FontSize="30" FontWeight="Bold" Foreground="DarkBlue"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Margin="0,40,0,0"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Username:" FontSize="16" Margin="0,10,0,5" Foreground="DarkBlue"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Height="30" FontSize="16" />

            <TextBlock Text="Password:" FontSize="16" Margin="10,20,0,5" Foreground="DarkBlue"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Height="30" FontSize="16"/>
        </StackPanel>

        <Button Content="Login" Width="100" Height="40" FontSize="16" Background="DarkBlue" Foreground="White"
                HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="2" Margin="0,20,0,0" Click="LoginButton_Click"/>
    </Grid>
</Window>
