<Window x:Class="Project212.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project212"
      mc:Ignorable="d" 
      Height="550" Width="800"
      Title="Authentication"
      WindowStartupLocation="CenterScreen">

    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="230"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="TitleText" Text="Login" FontSize="30" FontWeight="Bold" Foreground="DarkBlue"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock Text="Username:" FontSize="16" Margin="0,10,0,5" Foreground="DarkBlue"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Height="30" FontSize="16" />

            <TextBlock Text="Password:" FontSize="16" Margin="10,20,0,5" Foreground="DarkBlue"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Height="30" FontSize="16"/>

            <TextBlock x:Name="CitizenIDLabel" Text="CitizenID:" FontSize="16" Margin="10,20,0,5" Foreground="DarkBlue" Visibility="Collapsed"/>
            <TextBox x:Name="CitizenIDBox" Width="200" Height="30" FontSize="16" Visibility="Collapsed"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,0">
            <Button x:Name="AuthButton" Content="Login" Width="100" Height="40" FontSize="16" Background="DarkBlue" Foreground="White"
                    Click="AuthButton_Click"/>

            <Button x:Name="ToggleButton" Content="Switch to Register" Width="150" Height="40" FontSize="16" Background="Gray" Foreground="White"
                    Margin="10,0,0,0" Click="ToggleButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
