<UserControl x:Class="Project212.BookLich"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project212"
        mc:Ignorable="d"
        Height="450" Width="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />

            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="150" />

        </Grid.ColumnDefinitions>


        <Label Grid.Column="1" Content="Đặt lịch kiểm định" FontSize="27" Margin="146,30,-114,20" FontFamily="Segoe UI Black" Foreground="#18A5A7" Grid.RowSpan="2" Grid.ColumnSpan="2"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Chọn cơ sở" FontSize="15" />
        <Label Grid.Row="3" Grid.Column="0" Content="Thời gian" FontSize="15" />
        <ComboBox Grid.Row="2" Grid.Column="1" Margin="3,0,0,10" Width="222" HorizontalAlignment="Left" Name="cbRoles1" Grid.ColumnSpan="2" Height="25" VerticalAlignment="Bottom"/>

        <StackPanel Orientation="Horizontal" Margin="3,4,0,9"  Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2">
            <DatePicker x:Name="dpThoigian" />
            <ComboBox x:Name="cbHours" Width="50" Margin="5,0,5,0">
                <ComboBoxItem Content="08" />
                <ComboBoxItem Content="09" />
                <ComboBoxItem Content="10" />
                <ComboBoxItem Content="11" />
                <ComboBoxItem Content="12" />
                <ComboBoxItem Content="13" />
                <ComboBoxItem Content="14" />
                <ComboBoxItem Content="15" />
                <ComboBoxItem Content="16" />
            </ComboBox>
            <TextBlock Text="Giờ" VerticalAlignment="Center" />
        </StackPanel>




        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="0,0,23,0">
            <Button Background="#FFE998" MinWidth="80" Margin="3" Content="Đặt lịch" Name="btnDatlich" Click="btnDatlich_Click"/>
            <Button Background="#E21C34" MinWidth="80" Margin="3" Content="Hủy lịch" Name="btnHuylich" IsEnabled="False" Click="btnHuylich_Click"/>

        </StackPanel>
        <Label Grid.Row="5" Grid.Column="0" Content="Lọc theo cơ sở" Margin="0,10,0,5"/>

        <ComboBox Grid.Row="5" Grid.Column="1" Name="cbCoso" Margin="5,12,0,8" SelectionChanged="cbCoso_SelectionChanged" />

        <Label Grid.Row="4" Grid.Column="2" Content="Lịch sử" FontSize="27" Margin="72,35,-114,0" FontFamily="Segoe UI Black" Foreground="#18A5A7" Grid.RowSpan="2"/>

        <Label Grid.Row="6" Grid.Column="0" Content="Lọc theo ngày" Margin="0,10,0,0"/>
        <DatePicker Grid.Row="6" Grid.Column="1" Name="txtSearch" Margin="5,10,0,5" SelectedDateChanged="txtSearch_SelectedDateChanged"/>
        <DataGrid Grid.Row="7" Name="dgVehiclesLichsu" AutoGenerateColumns="False" IsReadOnly="True" Grid.ColumnSpan="3" Margin="39,0,-330,0" SelectionChanged="dgVehiclesLichsu_SelectionChanged" SelectionMode="Single" >
            <DataGrid.Columns>
                <DataGridTextColumn Width="*" Header="Cơ sở" Binding="{Binding StationName}"/>
                <DataGridTextColumn Width="*" Header="Thời gian" Binding="{Binding AppointmentDate}"/>
                <DataGridTextColumn Width="*" Header="Trạng thái" Binding="{Binding Status}"/>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
