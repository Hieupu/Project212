<UserControl x:Class="Project212.UserInformation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project212"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TabControl  Margin="10,10,10,10">
        <TabItem Header="Thông tin">
    <Grid Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="60" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="60" />

            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="170"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="1" Grid.Column="3" Content="Thông tin" FontSize="27" Margin="0,0,0,10" FontFamily="Segoe UI Black" Foreground="#18A5A7" HorizontalAlignment="Left"/>

        <Label Grid.Row="2" Grid.Column="1" Content="Tên:" FontSize="15" />
        <Label Grid.Row="2" Grid.Column="2" Content="{Binding Name}" FontSize="15" Name="ten"/>

        <Label Grid.Row="3" Grid.Column="1" Content="Ngày sinh:" FontSize="15" />
        <Label Grid.Row="3" Grid.Column="2" Content="{Binding Dob}" FontSize="15" Name="ngaysinh"/>

        <Label Grid.Row="4" Grid.Column="1" Content="Địa chỉ:" FontSize="15" />
        <Label Grid.Row="4" Grid.Column="2" Content="{Binding Address}" FontSize="15" Name="diachi"/>

        <Label Grid.Row="5" Grid.Column="1" Content="Số điện thoại:" FontSize="15" />
        <Label Grid.Row="5" Grid.Column="2" Content="{Binding Phone}" FontSize="15" Name="phone"/>

        <Label Grid.Row="6" Grid.Column="1" Content="Mail:" FontSize="15" />
        <Label Grid.Row="6" Grid.Column="2" Content="{Binding Mail}" FontSize="15" Name="mail"/>

                <Label Grid.Row="7" Grid.Column="1" Content="Id card:" FontSize="15" />
                <Label Grid.Row="7" Grid.Column="2" Content="{Binding Mail}" FontSize="15" Name="cancuoc"/>

                <Label Grid.Row="8" Grid.Column="2" Content="Phương tiện" FontSize="27" Margin="152,0,0,10" FontFamily="Segoe UI Black" Foreground="#18A5A7" HorizontalAlignment="Left" Grid.ColumnSpan="2"/>
                <DataGrid Grid.Row="9" Grid.Column="1" Name="dgVehicles" AutoGenerateColumns="False" IsReadOnly="True" Grid.ColumnSpan="3" Margin="0,0,51,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="*" Header="Hãng xe" Binding="{Binding Brand}"/>
                        <DataGridTextColumn Width="*" Header="Màu xe" Binding="{Binding Color}"/>
                        <DataGridTextColumn Width="*" Header="Số động cơ" Binding="{Binding Engine}"/>
                        <DataGridTextColumn Width="*" Header="Khung gầm" Binding="{Binding Chassis}"/>
                        <DataGridTextColumn Width="*" Header="Mẫu xe" Binding="{Binding Model}"/>
                        <DataGridTextColumn Width="*" Header="Biển số" Binding="{Binding Plate}"/>
                        <DataGridTextColumn Width="*" Header="Năm sản xuất" Binding="{Binding Dom}"/>
                        <DataGridTextColumn Width="*" Header="Dung tích" Binding="{Binding Capacity}"/>

                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>

        <TabItem Header="Chỉnh sửa">
            <Grid Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row="1" Grid.Column="1" Content="Chỉnh sửa thông tin" FontSize="27" FontFamily="Segoe UI Black" Foreground="#18A5A7" HorizontalAlignment="Center"/>
                <Label Grid.Row="2" Grid.Column="1" Content="Tên:" FontSize="15" />
                <TextBox Grid.Row="3" Grid.Column="1" Name="tbTen" IsEnabled="False"/>
                <Label Grid.Row="4" Grid.Column="1" Content="Ngày sinh:" FontSize="15" />
                <DatePicker Grid.Row="5" Grid.Column="1" Name="dtNgaysinh" IsEnabled="False"/>
                <Label Grid.Row="6" Grid.Column="1" Content="Địa chỉ:" FontSize="15" />
                <TextBox Grid.Row="7" Grid.Column="1" Name="tbDiachi" IsEnabled="False"/>
                <Label Grid.Row="8" Grid.Column="1" Content="Số điện thoại:" FontSize="15" />
                <TextBox Grid.Row="9" Grid.Column="1" Name="tbPhone" IsEnabled="False"/>
                <Label Grid.Row="10" Grid.Column="1" Content="Mail:" FontSize="15" />
                <TextBox Grid.Row="11" Grid.Column="1" Name="tbMail" IsEnabled="False"/>

                <Label Grid.Row="12" Grid.Column="1" Content="Id card:" FontSize="15" />
                <TextBox Grid.Row="13" Grid.Column="1" Name="tbCancuoc" IsEnabled="False"/>
                
                <StackPanel Grid.Row="15" Grid.Column="1" Orientation="Horizontal" Grid.ColumnSpan="2" Margin="0,0,23,0" HorizontalAlignment="Left">
                    
                    <Button Background="Green" MinWidth="80" Margin="3" Content="Chỉnh sửa" Name="btnChinhsua" Foreground="White" Click="btnChinhsua_Click"/>
                    <Button Background="#FFE998" MinWidth="80" Margin="3" Content="ADD" Name="btnAdd" IsEnabled="False" Click="btnAdd_Click"/>
                    <Button Background="#E21C34" MinWidth="80" Margin="3" Content="Update" Name="btnUpdate" IsEnabled="False" Click="btnUpdate_Click"/>

                </StackPanel>
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>
