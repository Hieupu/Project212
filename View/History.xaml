<UserControl x:Class="Project212.History"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project212"
        mc:Ignorable="d"
        Height="450" Width="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="1" Content="Thông báo" FontSize="27" Margin="77,26,114,18" FontFamily="Segoe UI Black" Foreground="#18A5A7" Grid.RowSpan="2"/>
        <Label Grid.Column="2" Content="Chi tiết" FontSize="27" Margin="151,26,-469,14" FontFamily="Segoe UI Black" Foreground="#18A5A7" Grid.RowSpan="2"/>
        <Border BorderBrush="Blue" BorderThickness="3" CornerRadius="15" Padding="20" Grid.Column="2" Margin="10,15,23,0" Grid.RowSpan="3">
            <StackPanel>
                <TextBlock Name="tbDetail" FontSize="16" TextWrapping="Wrap"/>
                <TextBlock Name="tbSentDate" FontSize="14" Foreground="Gray"/>

            </StackPanel>
        </Border>
        <Border BorderBrush="Blue" BorderThickness="3" CornerRadius="15" Padding="20" Margin="20,15,20,0" Grid.RowSpan="3" Grid.ColumnSpan="2">

            <DataGrid  Name="dgNotifications" AutoGenerateColumns="False" IsReadOnly="True" Grid.ColumnSpan="3" SelectionMode="Single" Margin="-13,38,-13,-13" >
                <DataGrid.Columns>
                    <DataGridTextColumn Width="*" Header="Tiêu đề" Binding="{Binding Detail}"/>
                    <DataGridTextColumn Width="150" Header="Thời gian" Binding="{Binding SentDate, StringFormat=dd/MM/yyyy HH:mm}"/>

                </DataGrid.Columns>
            </DataGrid>

        </Border>
        <Label Grid.Column="1" Content="Lịch Sử" FontSize="27" Margin="293,10,-261,0" FontFamily="Segoe UI Black" Foreground="#18A5A7" Grid.ColumnSpan="2" Grid.Row="3"/>
    </Grid>
</UserControl>
