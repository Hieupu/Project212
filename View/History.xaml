<UserControl x:Class="Project212.History"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project212"
        mc:Ignorable="d"
        Height="450" Width="800">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="1" Content="Thông báo" FontSize="27" Margin="77,26,114,18" FontFamily="Segoe UI Black" Foreground="#18A5A7" Grid.RowSpan="2"/>
        <Label Grid.Column="2" Content="Chi tiết" FontSize="27" Margin="151,26,123,14" FontFamily="Segoe UI Black" Foreground="#18A5A7" Grid.RowSpan="2"/>

        <!-- Khung hiển thị chi tiết -->
        <Border BorderBrush="Blue" BorderThickness="3" CornerRadius="15" Padding="48" Grid.Column="2" Margin="10,15,23,0" Grid.RowSpan="3">
            <StackPanel>
                <TextBlock Text="Nội dung:" FontWeight="Bold"/>
                <TextBlock x:Name="tbDetail" FontSize="16" TextWrapping="Wrap"/>

                <TextBlock Text="Thời gian gửi:" FontWeight="Bold"/>
                <TextBlock x:Name="tbSentDate" FontSize="14" Foreground="Gray"/>

            </StackPanel>
        </Border>

        <!-- DataGrid thông báo -->
        <Border BorderBrush="Blue" BorderThickness="3" CornerRadius="15" Padding="20" Margin="20,15,20,0" Grid.RowSpan="3" Grid.ColumnSpan="2">
            <DataGrid Name="dgNotifications" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="dgNotifications_SelectionChanged"
                      SelectionMode="Single" Margin="-13,38,-13,-13">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="150" Header="Trạng thái" Binding="{Binding IsRead, Converter={StaticResource ReadStatusConverter}}"/>
                    <DataGridTextColumn Width="150" Header="Thời gian" Binding="{Binding SentDate, StringFormat=dd/MM/yyyy HH:mm}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Label Grid.Row="3" Grid.Column="1" Content="Xuất file txt" HorizontalAlignment="Left" Width="76" Margin="51,17,0,13"/>
        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,10">
            <Button MinWidth="80" Margin="3" Width="10" Content="TxtFile" Name="btnExportTxt" HorizontalAlignment="Left" Click="btnExportTxt_Click" />

        </StackPanel>
        <Label Grid.Column="1" Content="Lịch Sử" FontSize="27" Margin="293,10,-261,0" FontFamily="Segoe UI Black" Foreground="#18A5A7" Grid.ColumnSpan="2" Grid.Row="3"/>
        <DataGrid Name="DgResult" AutoGenerateColumns="False" IsReadOnly="True" 
          SelectionMode="Single" Margin="20,0,23,0" Grid.Row="4" Grid.ColumnSpan="3">
            <DataGrid.Columns >
                <DataGridTextColumn Width="150" Header="Kết quả" Binding="{Binding Result, Converter={StaticResource ResultConverter}}"/>

                <DataGridTextColumn Width="150" Header="CO" Binding="{Binding Co}"/>
                <DataGridTextColumn Width="150" Header="HC" Binding="{Binding Hc}"/>
                <DataGridTextColumn Width="150" Header="NOx" Binding="{Binding Nox}"/>
                <DataGridTextColumn Width="150" Header="Ghi chú" Binding="{Binding Note}"/>
                <DataGridTextColumn Width="150" Header="Ngày kiểm định" Binding="{Binding TimeId}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
